<Window x:Class="CarpentryShop.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarpentryShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1024">
    <Grid x:Name="MainWindowGrid">
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\user\Desktop\NewProject\CarpentryShop\CarpentryShop\Images\MainWindowImage\CarpentryEnter.jpg"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom">
            <Button Content="Enter" Margin="40" FontSize="22" Click="EventEnterButton"></Button>
        </StackPanel>
    </Grid>
</Window>
